<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_document_description"
            android:layout_marginTop="14dp"
            tools:text="2019-02-02" />

        <Button
            android:id="@+id/button_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_document_description"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="6dp"
            android:layout_marginEnd="0dp"
            android:text="@string/download" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_document_description"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/button_download"
            android:text="@string/delete" />

        <TextView
            android:id="@+id/text_view_document_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_document_name"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/image_view"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book." />

        <TextView
            android:id="@+id/text_view_document_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="sample.pdf" />

        <TextView
            android:id="@+id/text_view_document_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/text_view_document_description"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            tools:text="PARENT" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>