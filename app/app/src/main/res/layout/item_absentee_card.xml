<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absences:"
            android:layout_alignBottom="@+id/check_box"
            android:layout_alignLeft="@+id/text_view_child_name"
            android:layout_alignStart="@+id/text_view_child_name"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/text_view_absentees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/check_box"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="9dp"
            android:layout_toEndOf="@+id/text_view"
            android:text="0" />

        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/image_view"
            android:src="@drawable/ic_child"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_box"
            android:layout_below="@+id/text_view_child_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp" />

        <TextView
            android:id="@+id/text_view_child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child name"
            android:textSize="20sp"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_alignTop="@+id/image_view"
            android:layout_toRightOf="@+id/image_view"
            android:layout_toEndOf="@+id/image_view"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>


</LinearLayout>